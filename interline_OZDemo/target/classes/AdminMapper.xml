<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.co.interlineOZDemo.dao.AdminMapper">
	<insert id="registerMember" parameterType="member">
		insert into userInform(
		userId
		,password
		,companyName
		)
		values(
		#{userId}
		,#{password}
		,#{companyName}
		)
	</insert>
	
	<select id="getMemberList" resultType="member">
		select * from userInform
	</select>
	
	<select id="getMember" parameterType="int" resultType="member">
		select * from userInform where userNum = #{userNum}
	</select>
	
	<update id="updateMember" parameterType="member">
		update userInform
			set
				password = #{password}
			where
				userId = #{userId}
	</update>
	
	<delete id="deleteMember" parameterType="int">
		delete from userInform where userNum = #{userNum}
	</delete>
</mapper>